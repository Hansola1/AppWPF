<UserControl x:Class="GeckoMarket.UseControl.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeckoMarket.UseControl"
             mc:Ignorable="d" 
             d:DesignHeight="80" Width="600">
    <Grid Background="White">

        <TextBox x:Name="Find_TextBox" FontSize="25" VerticalAlignment="Center"  
                 BorderBrush="#FFE1B396" Height="50" Margin="0,0,71,0"/>
        <Button x:Name="Find_Button" Content="Найти" VerticalAlignment="Center" 
                Height="50" Margin="529,0,0,0"/>
    </Grid>
</UserControl>
